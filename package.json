{
  "name": "@newblock/iautopay-mcp",
  "version": "0.1.0",
  "description": "MCP Server for iAutoPay with x402 payment protocol and EIP-3009 support | 基于 iAutoPay 的 x402 支付协议和 EIP-3009 支持的 MCP 服务器",
  "type": "module",
  "main": "dist/iautopay-mcp.js",
  "bin": {
    "iautopay-mcp": "dist/iautopay-mcp.js"
  },
  "files": [
    "dist/iautopay-mcp.js",
    "README.md",
    "README.zh-CN.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/server.ts --target node --format esm --outfile dist/iautopay-mcp.js --external @x402/core --external @x402/evm",
    "dev": "tsx src/server.ts",
    "test": "vitest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "x402",
    "payment",
    "blockchain",
    "usdc",
    "eip-3009",
    "autonomous-payment"
  ],
  "author": "newblock <newblock@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/newblock/iautopay"
  },
  "homepage": "https://github.com/newblock/iautopay#readme",
  "bugs": {
    "url": "https://github.com/newblock/iautopay/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@x402/core": "^2.3.0",
    "@x402/evm": "^2.3.0",
    "viem": "^2.21.35",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^4.0.18",
    "tsx": "^4.21.0"
  }
}
